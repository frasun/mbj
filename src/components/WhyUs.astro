---
import Icon, { IconName } from "./Icon.astro";

interface Props {
	advantages: {
		title: string;
		subtitle: string;
	}[];
	pricing: {
		title: string;
		content: string;
	};
}

const { advantages, pricing }: Props = Astro.props;

const ADVANTAGES_HEADING = "Dlaczego my?";
---

<section>
	<h3>{ADVANTAGES_HEADING}</h3>
	<ul>
		{
			advantages.map(({ title, subtitle }) => (
				<li>
					<Icon icon={IconName.Check} />
					<h6>{title}</h6>
					<p>{subtitle}</p>
				</li>
			))
		}
	</ul>
	<div>
		<Icon icon={IconName.Info} />
		<h6>{pricing.title}</h6>
		<p>{pricing.content}</p>
	</div>
</section>
