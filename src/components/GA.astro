---
interface Props {
	ga: string;
}

const { ga }: Props = Astro.props;
---

<!-- Google tag (gtag.js) -->
<script async src={`https://www.googletagmanager.com/gtag/js?id=G-${ga}`}
></script>

<script is:inline define:vars={{ ga }}>
	window.dataLayer = window.dataLayer || [];
	function gtag() {
		dataLayer.push(arguments);
	}
	gtag("js", new Date());
	gtag("config", `G-${ga}`);
</script>
