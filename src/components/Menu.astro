---
import Logo from "./Logo.astro";

const MENU = [
	{
		label: "Oferta",
		link: "#oferta",
	},
	{
		label: "Dlaczego my?",
		link: "#dlaczego-my",
	},
	{
		label: "Kontakt",
		link: "#kontakt",
	},
];

const { theme } = Astro.props;
---

<nav>
	<a href="#">
		<Logo type={theme} />
	</a>
	<ul>
		{
			MENU.map(({ label, link }) => (
				<li>
					<a href={link}>{label}</a>
				</li>
			))
		}
	</ul>
</nav>

<style>
	nav {
		padding: var(--menu--padding) min(var(--spacing--3), 3vw);
		display: flex;
		justify-content: space-around;
		align-items: center;
		background-color: var(--color--1);
		border-bottom: 1px solid var(--menu--border-color);
		position: sticky;
		top: 0;
		z-index: 1000;
	}

	nav :global(svg) {
		width: auto;
		height: var(--menu--logo--height);
	}

	ul {
		list-style: none;
		display: flex;
		justify-content: end;
		flex: 1;
		gap: var(--spacing--3);
	}

	@media (max-width: 600px) {
		ul {
			display: none;
		}
	}

	a {
		text-transform: uppercase;
		font-weight: 700;
		letter-spacing: 0.03em;
		font-size: max(var(--font-size--8), 0.703125vw + 0.25rem);
		color: var(--menu--links--color);
	}

	nav :global(svg) {
		color: var(--menu--logo--color);
	}
</style>
