---
import Layout from "../layouts/Layout.astro";
import Menu from "../components/Menu.astro";
import Splash from "../components/Splash.astro";
import Services from "../components/Services.astro";
import WhyUs from "../components/WhyUs.astro";
import Footer from "../components/Footer.astro";
import GA from "../components/GA.astro";
import CookieBanner from "../components/CookieBanner.astro";

export enum Theme {
	Administracja = "administracja",
	Serwis = "serwis",
}

const SITE_NAME = "MBJ";

const {
	frontmatter: {
		theme,
		siteName,
		siteDescription,
		description,
		keywords,
		splashTitle,
		splashText,
		services,
		servicesHeading,
		servicesInfo,
		advantages,
		pricing,
		seeAlso,
		email
	},
} = Astro.props;

const title = `${siteName} - ${siteDescription}`;
const gaCode = Theme.Administracja === theme ? "J7MHHZ0TZ2" : "XFWQGGG5RS";
---

<Layout
	theme={theme}
	pageTitle={title}
	metaDescription={description}
	metaKeywords={keywords}
>
	<Menu theme={theme} title={siteName} />
	<Splash
		title={splashTitle}
		text={splashText}
		theme={theme}
		imageAlt={title}
	/>
	<Services
		heading={servicesHeading}
		services={services}
		info={servicesInfo}
		theme={theme}
		imageAlt={title}
	/>
	<WhyUs advantages={advantages} pricing={pricing} />
	<Footer siteName={SITE_NAME} seeAlso={seeAlso} email={email} />
</Layout>
{import.meta.env.PROD && (
	<GA ga={gaCode} />
	<CookieBanner />
)}

<script src="../assets/scripts/animations.js"></script>
