---
import Layout from "../layouts/Layout.astro";
import Menu from "../components/Menu.astro";
import Splash from "../components/Splash.astro";
import Services from "../components/Services.astro";
import WhyUs from "../components/WhyUs.astro";
import Footer from "../components/Footer.astro";

const SITE_NAME = "MBJ";

const {
	frontmatter: {
		theme,
		splashTitle,
		splashText,
		services,
		servicesHeading,
		servicesInfo,
		advantages,
		pricing,
		seeAlso,
	},
} = Astro.props;
---

<Layout theme={theme}>
	<Menu theme={theme} />
	<Splash title={splashTitle} text={splashText} />
	<Services heading={servicesHeading} services={services} info={servicesInfo} />
	<WhyUs advantages={advantages} pricing={pricing} />
	<Footer siteName={SITE_NAME} seeAlso={seeAlso} />
</Layout>
