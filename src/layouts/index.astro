---
import Layout from "../layouts/Layout.astro";
import Menu from "../components/Menu.astro";
import Splash from "../components/Splash.astro";
import Services from "../components/Services.astro";
import WhyUs from "../components/WhyUs.astro";
import Footer from "../components/Footer.astro";

export enum Theme {
	Administracja = "administracja",
	Serwis = "serwis",
}

const SITE_NAME = "MBJ";

const {
	frontmatter: {
		theme,
		title,
		description,
		keywords,
		splashTitle,
		splashText,
		services,
		servicesHeading,
		servicesInfo,
		advantages,
		pricing,
		seeAlso,
	},
} = Astro.props;
---

<Layout
	theme={theme}
	pageTitle={title}
	metaDescription={description}
	metaKeywords={keywords}
>
	<Menu theme={theme} />
	<Splash title={splashTitle} text={splashText} theme={theme} />
	<Services
		heading={servicesHeading}
		services={services}
		info={servicesInfo}
		theme={theme}
	/>
	<WhyUs advantages={advantages} pricing={pricing} />
	<Footer siteName={SITE_NAME} seeAlso={seeAlso} />
</Layout>
